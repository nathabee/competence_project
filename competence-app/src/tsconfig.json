{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "jsx": "react-jsx",  
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]  
      }
    },
    "include": ["src/**/*", "__tests__/**/*"],
    "exclude": ["node_modules"]
  }
  