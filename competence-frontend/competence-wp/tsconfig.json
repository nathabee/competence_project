{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@context/*": ["context/*"],
      "@api/*": ["api/*"],
      "@mytypes/*": ["mytypes/*"],
      "@app/*": ["app/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@assets/*": ["assets/*"]


    }
  },
  "include": ["src/**/*"]
}

 